#!/usr/bin/env -S nu --stdin

# 粘贴剪贴板内容至输出
def main [] {
    match $env.XDG_SESSION_TYPE? {
        'wayland' => { wl-paste -n },
        'x11' => { xclip -sel c -o },
        _ => {
            powershell.exe -c '[Console]::Out.Write($(Get-Clipboard -Raw).tostring().replace("`r", ""))'
        },
    }
}
